{% extends 'base.html.twig' %}

{% block title %}Invoices{% endblock %}

{% block body %}
    <h1>Invoices</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ invoice.number }}</td>
            </tr>
            <tr>
                <th>Netto</th>
                <td>{{ invoice.netto }}</td>
            </tr>
            <tr>
                <th>Brutto</th>
                <td>{{ invoice.brutto }}</td>
            </tr>
            <tr>
                <th>Vat</th>
                <td>{{ invoice.vat }}</td>
            </tr>
            <tr>
                <th>IssueDate</th>
                <td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ invoice.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ invoice.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('invoices_index') }}">back to list</a>

    <a href="{{ path('invoices_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('invoices/_delete_form.html.twig') }}
{% endblock %}
