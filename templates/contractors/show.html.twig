{% block title %}Contractors{% endblock %}

{% block body %}
    <h1>Contractors</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contractor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contractor.name }}</td>
            </tr>
            <tr>
