{% extends 'base.html.twig' %}

{% block title %}Contractors index{% endblock %}

{% block body %}
    <h1>Contractors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nip</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contractor in contractors %}
            <tr>
                <td>{{ contractor.id }}</td>
                <td>{{ contractor.name }}</td>
                <td>{{ contractor.nip }}</td>
                <td>{{ contractor.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('contractors_show', {'id': contractor.id}) }}">show</a>
                    <a href="{{ path('contractors_edit', {'id': contractor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contractors_new') }}">Create new</a>
{% endblock %}
